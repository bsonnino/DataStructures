<UserControl x:Class="DataStructures.View.StackElement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="50" Width="115" Name="elStack">
    <Grid>
        <Image Source="\Images\Plate.png" Opacity="0.6"/>
        <ContentPresenter TextElement.FontSize="14" TextElement.FontWeight="Bold"
              HorizontalAlignment="Center" VerticalAlignment="Center"
              Content="{Binding ElementName=elStack, Path=Data, Mode=TwoWay}"/>

    </Grid>
</UserControl>
